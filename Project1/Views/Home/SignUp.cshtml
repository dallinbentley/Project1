<br />
<div class="row">
    <div class="col-3">
        <h4 class="text-center">Monday 3/15/2021</h4>
        <hr />
        @foreach (var x in Model.availableTimes)
        {
            @if (x.AvailableTime.Day == 15)
            {
                <div class="row align-items-center justify-content-around">
                    <h5>
                        @if (x.AvailableTime.Hour > 12)
                        {
                            @(x.AvailableTime.Hour - 12 + ":00 PM");
                        }
                        else
                        {
                            @(x.AvailableTime.Hour + ":00 AM");
                        }
                    </h5>
                    <form method="post" asp-action="SignUp">
                        <input hidden asp-for="TimeId" value="@x.TimeId" />
                        <input hidden asp-for="Year" value="@x.AvailableTime.Year" />
                        <input hidden asp-for="Hour" value="@x.AvailableTime.Hour" />
                        <input hidden asp-for="Month" value="@x.AvailableTime.Month" />
                        <input hidden asp-for="Day" value="@x.AvailableTime.Day" />
                        <button type="submit" id="submit" class="btn btn-block btn-primary">Reserve</button>
                    </form>
                </div>
                <hr />
            }
        }
